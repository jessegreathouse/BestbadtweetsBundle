<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>{% block title %}{% endblock %}</title>
<link rel="shortcut icon" href="/favicon.ico" />
{% block stylesheets %}
{% stylesheets '@BestbadtweetsBundle/Resources/public/css/*' filter='yui_css' %}
<link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
{% endstylesheets %}
{% endblock %}

{% block javascripts %}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js" type="text/javascript"></script>
{% javascripts '@BestbadtweetsBundle/Resources/public/js/*' filter='yui_js' %}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}
<!--[if IE]>
<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->
{% if app.environment == "prod" %}
<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-25795952-1']);
  _gaq.push(['_setDomainName', 'bestbadtweets.com']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();
</script>
{% endif %}
{% endblock %}
</head>
<body>

<div id="doc" class="route-home">

<div id="top-stuff">
{% include "BestbadtweetsBundle::top.html.twig" %}
</div>

<div id="page-outer">
    <div id="page-container" class="permalink-container" style="">
        <div>
            <div class="permalink-header">
            </div>
            <div class="permalink">
                <div class="components-above">
                    <div class="component">
                    </div>
                </div>
                <div class="components-middle">
                    {% block details %}{% endblock %}
                </div>
                <div class="components-below">
                </div>
            </div>
            <div class="permalink-footer">
                <div class="component">
                    <div class="footer inline-list">
                        <ul>
                            <li><a href="/about">About</a></li>
                            <li><a href="/help">Help</a>
                            <li><a href="/privacy">Privacy</a></li>
                        </ul>
                    </div>
            </div>
        </div>
    </div>
</div>
<script>
    jQuery(document).ready(function(){
        {% if tweet is defined %}
        $('body').css("background", "#{{ tweet.user.profile_background_color }} url({{ tweet.user.profile_background_image_url }}) no-repeat left top");
        {% endif %}
    });
</script>
<div id="message-notifications"></div>
</div>
{% include "BestbadtweetsBundle::footer.html.twig" %}
</body>
</html>
